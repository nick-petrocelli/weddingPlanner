@model WeddingPlanner.Models.User
<div class="m-3"></div>
<h1 class="display-3">Register</h1>
<hr>
<form method="post" asp-action="CreateUser" class="form">
    <div class="form-group mb-3">
        <label asp-for="FirstName">First Name: </label>
        <input asp-for="FirstName" placeholder="Enter your first name" class="form-control"/>
        <span class="mt-2 text-danger" asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName">Last Name: </label>
        <input asp-for="LastName" placeholder="Enter your last name" class="form-control"/>
        <span class="mt-2 text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email">Email: </label>
        <input asp-for="Email" placeholder="Enter your email" class="form-control"/>
        <span class="mt-2 text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password">Password: </label>
        <input asp-for="Password" placeholder="Enter your unique password" class="form-control" type="password"/>
        <span class="mt-2 text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword">Confirm Password: </label>
        <input asp-for="ConfirmPassword" placeholder="Must match the password above" class="form-control" type="password"/>
        <span class="mt-2 text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>
