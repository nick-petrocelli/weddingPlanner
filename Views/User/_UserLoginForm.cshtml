@model WeddingPlanner.Models.UserLogin

<div class="m-3"></div>
<h1 class="display-3">Login</h1>
<hr>
<form method="post" asp-action="LoginUser" class="form">
    <div class="form-group mb-3">
        <label asp-for="LoginEmail">Email: </label>
        <input asp-for="LoginEmail" placeholder="Enter your email" class="form-control"/>
        <span class="mt-2 text-danger" asp-validation-for="LoginEmail"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LoginPassword">Password: </label>
        <input asp-for="LoginPassword" placeholder="Enter your unique password" class="form-control" type="password"/>
        <span class="mt-2 text-danger" asp-validation-for="LoginPassword"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
